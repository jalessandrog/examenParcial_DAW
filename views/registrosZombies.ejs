<!DOCTYPE html>
<html>
    <%- include('includes/head.ejs') %>
<body>
    <%- include('includes/header.ejs') %>
    
    
    <div class="container-fluid">
        
        <div class="px-lg-5">
            <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>" >
            <div class="row mb-3 px-5">
                <label for="" class="col-sm-7 col-form-label col-form-label-sm">Buscar</label>
                <div class="col-sm-12">
                <input type="text" class="form-control form-control-sm" id="buscar" name="search" placeholder="Buscar">
                </div>
            </div>
            <br>

            <h2>Registro de Zombies</h2>
            <div class="row" id="">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="row"></th>
                        <th scope="col">Nombre Completo</th>
                        <th scope="col">Estado Actual</th>
                        <th scope="col">Fecha de Ãºltimo cambio</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (lista_zombies.length > 0) { %>
                        <% for (let zombie of lista_zombies) { %>
                        <tr>
                            <td>
                                <a href='/historial/<%= zombie.idZombie %>' class="btn btn-dark btn-sm" type="button">Historial de evolucion</a>
                            </td>
                            <td><%= zombie.NombreCompleto %></td>
                            <td><%= zombie.Estado %></td>
                            <td><%= zombie.FechaMetamorfosis %></td>
                        </tr>
                    </tbody>
                    <% } %>
                <% } else { %>
                    <h3>GRANDIOSO! <br> No hay zombies por el momento</h3>
                <% } %>
                  </table>
            </div>
        </div>

        

    </div>
    <%- include('includes/Footer.ejs') %>
    <%- include('includes/scriptSearch.ejs') %>
</body>
</html>